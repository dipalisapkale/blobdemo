@model List<string>
@{
    ViewData["Title"] = "Blob Image Gallery";
}

<h1>Blob Image Gallery</h1>

<form asp-action="Upload" asp-controller="Blob" method="post" enctype="multipart/form-data">
    <input type="file" name="file" />
    <button type="submit" class="btn btn-primary">Upload</button>
</form>

<hr />

<div class="row">
    @foreach (var imageUrl in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card">
                <img src="@imageUrl" class="card-img-top" alt="Image" />
            </div>
        </div>
    }
</div>
